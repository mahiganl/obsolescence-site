---
import { t, type Lang } from '../i18n/config';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<button
  data-theme-toggle
  class="p-2 text-stone-600 hover:text-stone-900 transition-colors"
  aria-label={t(lang, 'theme.toggle')}
>
  <!-- Sun icon (shown in dark mode) -->
  <svg class="w-5 h-5 sun-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display: none;">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
  </svg>
  <!-- Moon icon (shown in light mode) -->
  <svg class="w-5 h-5 moon-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
  </svg>
</button>

<script>
  function updateThemeIcons() {
    const isDark = document.documentElement.classList.contains('dark') || document.body.classList.contains('dark');
    document.querySelectorAll('.sun-icon').forEach(el => {
      (el as HTMLElement).style.display = isDark ? 'block' : 'none';
    });
    document.querySelectorAll('.moon-icon').forEach(el => {
      (el as HTMLElement).style.display = isDark ? 'none' : 'block';
    });
  }

  // Update on load
  updateThemeIcons();

  // Update when theme changes
  const observer = new MutationObserver(updateThemeIcons);
  observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
  observer.observe(document.body, { attributes: true, attributeFilter: ['class'] });

  // Update after View Transitions
  document.addEventListener('astro:after-swap', updateThemeIcons);
</script>
