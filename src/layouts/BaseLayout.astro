---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import MobileMenu from '../components/MobileMenu.astro';
import { languages, type Lang } from '../i18n/config';

interface Props {
  title: string;
  lang: Lang;
  currentSlug?: string;
  hideTitle?: boolean;
  tagline?: string;
}

const { title, lang, currentSlug, hideTitle = false, tagline } = Astro.props;
const bookTitle = languages[lang].bookTitle;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={bookTitle} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Lora:ital,wght@0,400;0,500;0,600;1,400;1,500&display=swap" rel="stylesheet" />
    <title>{title} | {bookTitle}</title>
    <ViewTransitions />
    <script is:inline>
      // Initialize theme before page renders to prevent flash
      (function() {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="min-h-screen transition-colors duration-300">
    <div class="flex min-h-screen">
      <!-- Desktop Sidebar -->
      <Sidebar lang={lang} currentSlug={currentSlug} />

      <!-- Main Content Area -->
      <div class="flex-1 lg:ml-72">
        <Header lang={lang} currentSlug={currentSlug} hideTitle={hideTitle} tagline={tagline} />

        <main class="px-4 sm:px-6 lg:px-8 py-8 max-w-3xl mx-auto" transition:animate="fade">
          <slot />
        </main>

        <!-- Footer -->
        <footer class="px-4 sm:px-6 lg:px-8 py-8 max-w-3xl mx-auto border-t border-stone-200 dark:border-stone-800">
          <div class="flex items-center justify-between text-sm text-stone-500 dark:text-stone-400">
            <span>&copy; {new Date().getFullYear()} Mahigan Lepage</span>
            <div class="flex items-center gap-4">
              <a
                href="https://mahigan.com/"
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-stone-700 dark:hover:text-stone-300 transition-colors"
                aria-label="mahigan.com"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                </svg>
              </a>
              <a
                href="https://x.com/mahiganL"
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-stone-700 dark:hover:text-stone-300 transition-colors"
                aria-label="Twitter/X"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            </div>
          </div>
        </footer>
      </div>
    </div>

    <!-- Mobile Menu Overlay -->
    <MobileMenu lang={lang} currentSlug={currentSlug} />

    <script>
      // Theme toggle functionality
      function initTheme() {
        const html = document.documentElement;
        const body = document.body;

        // Sync body class with html class
        if (html.classList.contains('dark')) {
          body.classList.add('dark');
        }

        // Listen for theme toggle clicks
        document.querySelectorAll('[data-theme-toggle]').forEach(btn => {
          btn.addEventListener('click', () => {
            const isDark = html.classList.toggle('dark');
            body.classList.toggle('dark');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
          });
        });
      }

      // Mobile menu functionality
      function initMobileMenu() {
        const menuBtn = document.querySelector('[data-menu-toggle]');
        const menu = document.getElementById('mobile-menu');
        const closeBtn = document.querySelector('[data-menu-close]');
        const backdrop = document.querySelector('[data-menu-backdrop]');

        function openMenu() {
          menu?.classList.remove('translate-x-full');
          menu?.classList.add('translate-x-0');
          backdrop?.classList.remove('opacity-0', 'pointer-events-none');
          backdrop?.classList.add('opacity-100');
          document.body.style.overflow = 'hidden';
        }

        function closeMenu() {
          menu?.classList.add('translate-x-full');
          menu?.classList.remove('translate-x-0');
          backdrop?.classList.add('opacity-0', 'pointer-events-none');
          backdrop?.classList.remove('opacity-100');
          document.body.style.overflow = '';
        }

        menuBtn?.addEventListener('click', openMenu);
        closeBtn?.addEventListener('click', closeMenu);
        backdrop?.addEventListener('click', closeMenu);
      }

      // Initialize on page load and after view transitions
      initTheme();
      initMobileMenu();

      // Preserve dark mode during View Transitions
      document.addEventListener('astro:before-swap', (event) => {
        const isDark = document.documentElement.classList.contains('dark');
        // Apply dark class to incoming document
        event.newDocument.documentElement.classList.toggle('dark', isDark);
        event.newDocument.body.classList.toggle('dark', isDark);
      });

      document.addEventListener('astro:after-swap', () => {
        initTheme();
        initMobileMenu();
      });
    </script>
  </body>
</html>
